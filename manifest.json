{
  "manifest_version": 3,
  "name": "Second Thought",
  "version": "1.0",
  "description": "Analyze the tone of your chat drafts and get mindful suggestions before sending.",
  "permissions": [
    "sidePanel",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://discord.com/*",
    "https://canary.discord.com/*",
    "https://ptb.discord.com/*",
    "https://openrouter.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*", 
        "https://discord.com/*",
        "https://canary.discord.com/*",
        "https://ptb.discord.com/*"
      ],
      "js": ["content.js"],
      "css": ["popup.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.css"],
      "matches": ["https://web.whatsapp.com/*", "https://discord.com/*"]
    }
  ],
  "action": {
    "default_popup": "sidepanel.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}